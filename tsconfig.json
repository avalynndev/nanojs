{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",

    "jsx": "react-jsx",
    "strict": true,

    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "skipLibCheck": true,
    "lib": ["DOM", "ES2022"],
    "types": []
  },

  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "example"],

  "ts-node": {
    "esm": true,
    "experimentalResolver": true
  }
}
